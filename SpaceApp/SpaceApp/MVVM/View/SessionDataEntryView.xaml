<Window x:Class="SpaceApp.MVVM.View.SessionDataEntryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceApp.MVVM.View"
        mc:Ignorable="d"
        Title="SessionDataEntryView" Height="450" Width="400"
        Background="#272537">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Background="#1b1a26">
            <TextBlock Text="Session Info" Foreground="White" FontSize="38" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        
        <TextBox Grid.Row="1" 
                 Height="40" Width="400"
                 Margin="10"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 Tag="Session Name"
                 Style="{StaticResource FormEntryTheme}">

        </TextBox>

        <TextBox Grid.Row="2" 
                 Height="40" Width="400"
                 Margin="10"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 Tag="Location"
                 Style="{StaticResource FormEntryTheme}">

        </TextBox>

        <TextBox Grid.Row="3" 
                 Height="40" Width="400"
                 Margin="10"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 Tag="Sky Condition"
                 Style="{StaticResource FormEntryTheme}">

        </TextBox>

        <TextBox Grid.Row="4" 
                 Height="40" Width="400"
                 Margin="10"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 Tag="Weather Condition"
                 Style="{StaticResource FormEntryTheme}">

        </TextBox>
    </Grid>
</Window>
